<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
	    android:shape="rectangle">
		    <solid android:color="@android:color/white" />
	
		    
		    <stroke
                android:width="2dp"
                android:color="@android:color/holo_blue_dark" />
            <corners
                android:radius="2dp" />
            <padding
                android:left="4dp"
                android:top="4dp"
                android:right="4dp"
                android:bottom="4dp" />
		</shape>
        
    </item>
    <item android:state_focused="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
	    android:shape="rectangle">
		    <solid android:color="@android:color/white" />
	
		    
		    <stroke
                android:width="2dp"
                android:color="@android:color/holo_blue_dark" />
            <corners
                android:radius="2dp" />
            <padding
                android:left="4dp"
                android:top="4dp"
                android:right="4dp"
                android:bottom="4dp" />
		</shape>
        
    </item>
    <item >
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
	    android:shape="rectangle">
		    <solid android:color="@android:color/white" />
	
		    
		    <stroke
                android:width="0dp"
                android:color="@android:color/holo_blue_dark" />
            <corners
                android:radius="0dp" />
            <padding
                android:left="4dp"
                android:top="4dp"
                android:right="4dp"
                android:bottom="4dp" />
		</shape>
        
    </item>
    
</selector>
